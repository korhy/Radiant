<!doctype html>
<html class="scroll-smooth">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{{ page.title??'Cl√©ment BOUDINEL' }}</title>
    <link rel="icon" href="{{ asset('images/favicon.svg') }}" />
</head>

{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="bg-indigo-900 text-center py-4 lg:px-4">
            <div class="p-2 bg-indigo-800 items-center text-indigo-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
                <span class="flex rounded-full bg-indigo-500 uppercase px-2 py-1 text-xs font-bold mr-3">{{ label }}</span>
                <span class="font-semibold mr-2 text-left flex-auto">{{ message }}</span>
            </div>
        </div>
    {% endfor %}
{% endfor %}
<body class="antialiased text-slate-400 bg-gradient-to-tr from-bg-blue-950 from-50% to-slate-700">
<div class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0">
    {% block body %}{% endblock %}
</div>
</body>
</html>